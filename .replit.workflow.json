{
  "workflows": [
    {
      "name": "Server",
      "command": "./start_server.sh",
      "timeout": 30000,
      "restartable": true,
      "restartOnFiles": ["server/**/*"]
    },
    {
      "name": "Angular Client",
      "command": "./start_angular.sh",
      "timeout": 30000,
      "restartable": true,
      "restartOnFiles": ["angular-client/**/*"]
    }
  ]
}